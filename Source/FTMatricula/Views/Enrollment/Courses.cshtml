@model FTMatricula.Models.Enrollment

@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = Resources.GetValue("ENROLLMENT_MANT");
}

@section styles{
    <link rel="stylesheet" href="~/Content/styles/popup_window.css" />
}

<div id="content_edit_left">
    <div class="editMenuSpace">
        <div class="editMenu">
            <ul>
                <li class="editOptList">
                    <div class="editOpt">
                        <a href="@Url.Action("Edit", "Enrollment", routeValues: new { id = Model.EnrollmentID })">@Resources.GetValue("ENROLLMENT_GENERAL_INFO")</a>
                    </div>
                </li>
                <li class="editOptList">
                    <div class="editOpt editOptSelected">
                        <a href="#">@Resources.GetValue("ENROLLMENT_COURSES_DETAILS")</a>
                    </div>
                </li>
                <li class="editOptList">
                    <div class="editOpt">
                        <a href="@Url.Action("Groups", "Enrollment", routeValues: new { id = Model.EnrollmentID })">@Resources.GetValue("ENROLLMENT_GROUPS_DETAILS")</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>

</div>

<div id="content_edit_right">

    <div class="editBox">
        @using (Html.BeginForm())
        { 
            <div class="editTitle">
                <span>@*@Resources.GetValue("ENROLLMENT_ADD_TITLE")*@Edición de Matrícula -</span>@Resources.GetValue("ENROLLMENT_COURSES_DETAILS")
            </div>

            <div class="editDetail">
                <div class="detailBlock">
                    <ul>
                        <li class="width100">
                            <label class="subTitle">Seleccione los cursos para la matrícula</label>
                        </li>
                        <li class="width100">
                            <div class="whiteContentBox">

                                @foreach (var item in Model.EnrollmentCourses)
                                {
                                    <div>
                                        @if (item.IsChecked)
                                        {
                                            <label class="checkSpace hit">
                                                <input type="checkbox" id="@item.EnrollmentCourseID" name="EnrollmentCourse" value="@item.IsChecked.ToString().ToLower()" checked="checked"/>
                                                @item.Course.Code &nbsp;-&nbsp; @item.Course.Name
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="checkSpace">
                                                <input type="checkbox" id="@item.EnrollmentCourseID" name="EnrollmentCourse" value="@item.IsChecked.ToString().ToLower()"/>
                                                @item.Course.Code &nbsp;-&nbsp; @item.Course.Name
                                            </label>
                                        }
                                    </div>
                                }
                            </div>
                        </li>

                        <li class="width100">
                            <div class="formBtnBar">
                                <a id="btnSaveSelectedCourses" href="#" class="button send">@Resources.GetValue("SAVE")</a>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="detailBox">
                    <ul class="hide">
                        <li class="width100">
                            <label class="subTitle">Información de nuevo Grupo</label>
                        </li>
                        <li>
                            <label>&nbsp;</label></li>
                        <li class="width100">
                            <label>&nbsp;</label>
                        </li>
                        <li>
                            <label>Nombre del Grupo</label>
                        </li>
                        <li>
                            <div>
                                <input id="Group_Name" name="Group_Name" type="text" value="" class="input width100" />
                            </div>
                        </li>
                        <li>
                            <label>Profesor</label>
                        </li>
                        <li>
                            <div>
                                @(Html.Kendo().DropDownList()
                                    .BindTo(FTMatricula.Utilities.GeneralCollections.ProfessorList)
                                    .Name("ProfessorID")
                                    .DataTextField("Text")
                                    .DataValueField("Value")
                                    .HtmlAttributes(new { @class = "width100" }))
                            </div>
                        </li>
                        <li>
                            <label>Cupo</label>
                        </li>
                        <li>
                            @(Html.Kendo().NumericTextBox<int>()
                                .Name("Quota")
                                .Format("n")
                                .Min(0)
                                .Max(100)
                                .Value(30)
                                .HtmlAttributes(new { @class = "width100" })
                          )
                        </li>
                        <li class="width100">
                            <label>&nbsp;</label>
                        </li>
                        <li class="width100">
                            <label class="subTitle">Horario</label>
                        </li>
                        <li class="width100">
                            <label>&nbsp;</label>
                        </li>
                        <li class="width100">
                            <div class="scheduleGrid">
                                <ul>
                                    <li>
                                        <p class="header">Aula</p>
                                    </li>
                                    <li>
                                        <p class="header">Horario</p>
                                    </li>
                                    <li>
                                        <p class="header"><a href="#addGroupWindow" class="popUp addButton"></a></p>
                                    </li>
                                </ul>
                                <ul id="scheduleGrid">
                                </ul>
                            </div>
                        </li>
                        <li class="width100">
                            <div class="formBtnBar">
                                <a href="#" class="button down" id="btnAddGroup">Agregar Grupo</a>
                            </div>
                        </li>    
                        <li class="width100">
                            <div class="errorsSpace">
                                <ul id="groupErrorArea">                                    
                                </ul>
                            </div>
                        </li>                   
                    </ul>
                </div>


                <div class="detailBox100">
                    <ul class="hide">
                        <li class="width100">
                            <label class="subTitle">Detalle de Grupos Creados para el Curso seleccionado</label>
                        </li>
                        <li class="width100">
                            <label>&nbsp;</label>
                        </li>
                        <li class="width100">
                            <div id="groups_grid"></div>
                        </li>
                    </ul>
                </div>
            </div>            
            <div class="errorsSpace">
                <ul>
                    <li>
                        @Html.ValidationMessageFor(m => m.Description)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(m => m.StartDate)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(m => m.EndDate)
                    </li>
                </ul>
            </div>
            @Html.HiddenFor(m => m.EnrollmentID)
            @Html.HiddenFor(m => m.InsertUserID)
            @Html.HiddenFor(m => m.InsertDate)
            <div class="clear"></div>
            <div class="formBtnBar">
                @Html.ActionLink(Resources.GetValue("CANCEL"), "Index", "Enrollment", routeValues: null, htmlAttributes: new { @class = "button back" })
            </div>
            <div class="clear"></div>            
        }
    </div>
</div>

<div class="popupWindow" id="addGroupWindow">
    <h2>Información de Horario</h2>
    <ul class="formList">
        <li>
            <table class="width100">
                <tr>
                    <td class="width25">
                        <label>Aula</label></td>
                    <td class="width75">
                        @(Html.Kendo().DropDownList()
                                    .BindTo(FTMatricula.Utilities.GeneralCollections.ClassroomsList)
                                    .Name("ClassroomID")
                                    .DataTextField("Text")
                                    .DataValueField("Value")
                                    .HtmlAttributes(new { @class = "width100" }))
                    </td>
                </tr>
            </table>
        </li>
        <li>
            <table class="width100">
                <tr>
                    <td class="width25">
                        <label>Día</label></td>
                    <td class="width75">
                        @(Html.Kendo().DropDownList()
                                    .BindTo(FTMatricula.Utilities.GeneralCollections.DaysList)
                                    .Name("Day")
                                    .DataTextField("Text")
                                    .DataValueField("Value")
                                    .HtmlAttributes(new { @class = "width100" }))
                    </td>
                </tr>
            </table>
        </li>

        <li>
            <table class="width100">
                <tr>
                    <td class="width25"></td>
                    <td class="width75">
                        <table class="width100">
                            <tr>
                                <td class="width40">
                                    <label>Hora Inicio</label></td>
                                <td class="width30">
                                    @(Html.Kendo().NumericTextBox<int>()
                                        .Name("StartTimeH")
                                        .Format("00")
                                        .Min(0)
                                        .Max(23)
                                        .Value(8)
                                        .HtmlAttributes(new { @class = "width80px" })
                                    )
                                </td>
                                <td class="width30">
                                    @(Html.Kendo().NumericTextBox<int>()
                                        .Name("StartTimeM")
                                        .Format("00")
                                        .Min(0)
                                        .Max(59)
                                        .Value(0)
                                        .HtmlAttributes(new { @class = "width80px" })
                                    )
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </li>

        <li>
            <table class="width100">
                <tr>
                    <td class="width25"></td>
                    <td class="width75">
                        <table class="width100">
                            <tr>
                                <td class="width40">
                                    <label>Hora Fin</label></td>
                                <td class="width30">
                                    @(Html.Kendo().NumericTextBox<int>()
                                        .Name("EndTimeH")
                                        .Format("00")
                                        .Min(0)
                                        .Max(23)
                                        .Value(8)
                                        .HtmlAttributes(new { @class = "width80px" })
                                    )
                                </td>
                                <td class="width30">
                                    @(Html.Kendo().NumericTextBox<int>()
                                        .Name("EndTimeM")
                                        .Format("00")
                                        .Min(0)
                                        .Max(59)
                                        .Value(0)
                                        .HtmlAttributes(new { @class = "width80px" })
                                    )
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </li>
        <li class="textRight formBtnBar">
            <a href="#" class="button send" id="addSchedule">Agregar Horario</a>
        </li>
    </ul>
</div>

@section Scripts {
    <script type="text/javascript" src="~/Scripts/enrollment.js"></script>
    <script type="text/javascript">
        var EnrollSchedule = [];
        $(function () {
            var matri = new enrollment({
                view: 'COURSES',
                urlSaveCourses: '@Url.Action("SaveSelectedCourses", "Enrollment")',
                urlAddGroups: '@Url.Action("SaveGroup", "Enrollment")',
                urlGetGroups: '@Url.Action("RetrieveGroups", "Enrollment")',
                urlDelete: '@Url.Action("DeleteGroup", "Enrollment")',
                GROUP_REQ: @Resources.GetValue("GROUP_REQ"),
                SCHEDULE_REQ: @Resources.GetValue("SCHEDULE_REQ")

            });
        });
    </script>
}
