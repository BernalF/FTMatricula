@model FTMatricula.Models.School
@{
    Layout = "~/Views/Shared/_LayoutKendo.cshtml";
    ViewBag.Title = @Resources.GetValue("TEST_KEY_2");
}

@section styles {

}
<div id="content">
    <h2>This is a School View</h2>
    <!-- ADDRESS SECTION STARTS -->
    <div>
        <ul id="formHolder data2" class="blacked">

            <li>
                @(Html.Kendo().Grid<FTMatricula.Models.School>()
              .Name("Grid")
              .Columns(columns =>
              {
                  columns.Bound(m => m.Name).Title(@Resources.GetValue("TEST_KEY_1"));
                  columns.Bound(m => m.Description).Title("Descripcion");
                  columns.Bound(m => m.Code).Title("Codigo Escuela");
                  columns.Command(command => 
                  {
                      command.Edit().Text("Editar").UpdateText("Actualizar").CancelText("Cancelar");
                      command.Destroy().Text("Eliminar");
                  }).Width(180);
              })
             .Editable(editable =>
                      {
                          editable.Mode(GridEditMode.PopUp)
                              .Window(m =>
                              {
                                  m.Title("Editar Escuela").Draggable();
                              });
                          editable.DisplayDeleteConfirmation("Esta seguro que desea eliminar el registro");
                      })
              .Sortable()
              .Filterable(filter =>
              {
                  filter.Enabled(true);
                  filter.Extra(false);
                  filter.Operators(oper =>
                  {
                      oper.ForString(ostr =>
                      {
                          ostr.IsEqualTo("Sean iguales a");
                          ostr.IsNotEqualTo("Sean diferentes de");
                          ostr.StartsWith("Empiezan con");
                          ostr.Contains("Contienen");
                          ostr.DoesNotContain("No Contienen");
                          ostr.EndsWith("Terminan con");
                      });
                  });
                  filter.Messages(msj =>
                  {
                      msj.Filter("Buscar");
                      msj.Clear("Limpiar");
                      msj.Info("Buscar valores que:");
                  });
              })
              .ToolBar(create => create.Create().Text("Nueva Escuela"))
              .Pageable(pager => pager
                    .Input(true)
                    .Numeric(true)
                    .Info(true)
                    .PreviousNext(true)
                    .Refresh(true)
                            .PageSizes(true).
                            Messages(messages =>
                            {
                                messages.Empty("No hay escuelas registradas");
                                messages.Display("{0} - {1} de {2} registros");
                                messages.ItemsPerPage("Registros por pagina");
                                messages.Page("Pagina");
                                messages.Of("de {0}");
                                messages.First("Primera Pagina");
                                messages.Previous("Pagina Anterior");
                                messages.Next("Siguiente Pagina");
                                messages.Last("Ultima Pagina");
                                messages.Refresh("Actualizar");
                            }))
              .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("PagingSchools", "School"))
                    .Create(create => create.Action("CreateSchool", "School"))
                    .Update(update => update.Action("UpdateSchool", "School"))
                    .Destroy(destroy => destroy.Action("DestroySchool", "School"))
                    .Model(model => model.Id(m => m.SchoolID))
              )
        )
            </li>
        </ul>

        <div style="width: 700px; margin: 10px auto;">
            @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "button home", style = "margin-left:290px" })
        </div>
        <div class="clear"></div>
    </div>


</div>


@section Scripts {
}
